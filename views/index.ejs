    <body>
        <%- include('./partial/nav.ejs') %> 
    
        <div class="blogs-content">
            <h2>All blogs</h2>
            <% if(blogs.length > 0){ %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"> <%= blog.title %></h3>
                <p class="snippet"> <%= blog.snippet %></p>
              
            <%}) %>
            <%  } else {  %>
                <p> No blocks to display</p>
                <% } %>


        </div>
        <%- include('./partial/footer.ejs') %> 
    </body>
    </html>
